<div class="row">
	<% @products.each do |product| %>
      <div class="col-sm-6 col-md-4">
      	<div class="well text-center">
      		<% if product.image.url.nil? == false %>
      			<p><%= image_tag product.image.url.to_s, size: 250, class: "imagesMain" %></p>
      		<% end %>
      		<h3><%= link_to product.name, product %></h3>
      		<p><%= number_to_currency(product.price, :precision => (product.price.round == product.price) ? 0 : 2) %></p>
      		<p>
      			<a href="#" data-toggle="modal" data-target="#myModal_<%= product.id %>">
      				<span class="glyphicon glyphicon-plus"></span> Quick Info
      			</a>
      		</p>
      	</div>
      </div>
      <div class="modal fade" id="myModal_<%= product.id %>" tabindex="-1" role="dialog"  aria-labelledby="myModalLabel">
	    <div class="modal-dialog" role="document">
	      <div class="modal-content">
	        <div class="modal-header">
	          <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
	          <h4 class="modal-title" id="myModal"><%= product.name %></h4>
	        </div>
	        <div class="modal-body">
	          <p>
	          	<% if product.image.url.nil? == false %>
      				<p><%= image_tag product.image.url.to_s, size: 150, class: "imagesMain" %></p>
	      		<% end %>
	      		<p><%= link_to product.name, product %></p>
	      		<p><%= number_to_currency(product.price, :precision => (product.price.round == product.price) ? 0 : 2) %></p>
	      		<p>Made By: <%= product.brand %></p>
	      		<p>Rating: <%= product.rating %>/5</p>
	      		<p>Category: <%= product.name %></p>
	      		<p>Description: <%= product.description %></p>
	          </p>
	        </div>
	        <div class="modal-footer">
	        	<div style="display: inline-block;">
	        		<%= form_tag add_to_cart_path, method: :post do %>
	        			<%= hidden_field_tag :product_id, product.id %>
	        			Quantity: <%= number_field_tag :quantity, 1, class: "form-control", style: "width: 120px; display: inline-block;" %>
	        			<%= submit_tag "Add To Cart", class: "btn btn-primary", style: "display: inline-block;" %>
	        		<% end %>
	        	</div>
	        	<div style="display: inline-block;">
	        		<button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
	        	</div>
	        </div>
	      </div><!-- /.modal-content -->
	    </div><!-- /.modal-dialog -->
	  </div><!-- /.modal -->
    <% end %>
</div>